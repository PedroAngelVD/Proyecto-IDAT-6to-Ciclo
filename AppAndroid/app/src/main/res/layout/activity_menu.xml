<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity">

        <ImageButton
            android:id="@+id/btnCerrarSesion"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_marginBottom="25dp"
            android:background="@color/zxing_transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/exit2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="170dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/btnReinscripcion"
            android:padding="10dp"
            android:src="@drawable/reinscripcion"
            android:scaleType="fitCenter"
            android:background="@color/zxing_transparent"
            android:adjustViewBounds="true" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="@string/valbtnReinscripcion"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="170dp"
                    android:orientation="vertical">

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/btnMensualidad"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@color/zxing_transparent"
            android:src="@drawable/mensualidad" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="@string/valbtnMensualidad"/>
                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="170dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/btnCursos"
            android:background="@color/zxing_transparent"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/cursos" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="@string/valbtnCursos"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="170dp"
                    android:orientation="vertical">
        <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/btnDatosAlumno"
            android:padding="12dp"
            android:background="@color/zxing_transparent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/datosalumno" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="@string/valbtnDatosAlumno"/>
                </LinearLayout>

        </LinearLayout>

</LinearLayout>